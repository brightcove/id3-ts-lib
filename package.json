{
  "name": "@brightcove/id3-ts-lib",
  "version": "1.1.2",
  "description": "The fat-free ID3-only MPEG2TS segment generator library!",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "bin": {
    "id3-ts": "./bin/index.js"
  },
  "scripts": {
    "test": "npm-run-all test:*",
    "test:unit": "mocha ./test/unit",
    "test:integration": "mocha ./test/integration",
    "cover": "nyc npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://bithub.brightcove.com/jrivera/id3-ts-lib.git"
  },
  "author": "Jon-Carlos Rivera",
  "devDependencies": {
    "jsdoc": "^3.5.5",
    "mocha": "^6.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text-summary",
      "html"
    ],
    "include": [
      "index.js",
      "lib/*.js"
    ]
  }
}
